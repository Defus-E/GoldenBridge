<% layout('./layout/index') -%>
<% block('title', lang.titles.home) -%>

<div class="body">
	<section id="hero">
		<div class="wrapper">
			<div class="title"><%= lang.header.translation%></div>
			<div class="buttons mb">
				<a class="button" uk-scrollspy="cls: uk-animation-slide-right;" uk-toggle="target: #getcall"><%= lang.header.form.contacts%></a>
				<div class="cb"></div>
				<a class="button" uk-scrollspy="cls: uk-animation-slide-right;" uk-toggle="target: #getorder"><%= lang.order_transfer%></a>
			</div>
		</div>
	</section>
	<section id="about">
		<div class="wrapper">
			<div class="content-about">
				<% if (lang.language === "ru") { %>
					<span><%= lang.GBridge.agency.desc + ' ' + lang.GBridge.agency.name%></span>
				<% } else { %>
					<span><%= lang.GBridge.agency.desc%></span>
					<h1><%= lang.GBridge.agency.name%></h1>
				<% } %>
				<div class="text">
					<p><%= lang.GBridge.info.p1%></p>
					<p><%= lang.GBridge.info.p2%></p>
					<p><%= lang.GBridge.info.p3%></p>
					<p><%= lang.GBridge.info.p4%></p>
				</div>
			</div>
		</div>
	</section>
	<section id="services">
		<div class="wrapper">
			<div class="services" uk-scrollspy="target: &gt; .item; cls:uk-animation-fade; delay: 10">
				<div class="item"><i uk-icon="icon:directory; ratio: 1.2"></i>
					<div class="item_text"><%= lang.services.business.title%></div>
				</div>
				<div class="item"><i uk-icon="icon:wrench; ratio: 1.2"></i>
					<div class="item_text"><%= lang.services.technical.title%></div>
				</div>
				<div class="item"><i uk-icon="icon:bank; ratio: 1.2"></i>
					<div class="item_text"><%= lang.services.legal.title%></div>
				</div>
				<div class="item"><i uk-icon="icon:dna; ratio: 1.2"></i>
					<div class="item_text"><%= lang.services.medical.title%></div>
				</div>
				<div class="item"><i uk-icon="icon:hard-drive-disks; ratio: 1.2"></i>
					<div class="item_text"><%= lang.services.website_game_software.title%></div>
				</div>
				<div class="item"><i uk-icon="icon:film-strip; ratio: 1.2"></i>
					<div class="item_text"><%= lang.services.audio_video.title%></div>
				</div>
				<div class="item"><i uk-icon="icon:picture; ratio: 1.2"></i>
					<div class="item_text"><%= lang.services.DTP_design.title%></div>
				</div>
			</div>
		</div>
	</section>
	<section id="garant">
		<div class="wrapper">
			<h2 uk-scrollspy="cls: uk-animation-slide-right-medium;"><%= lang.garant.why%></h2>
			<ul uk-scrollspy="target: &gt; div; cls:uk-animation-fade; delay: 50">
				<li>
					<div class="icon" uk-icon="icon: clock; ratio: 3"></div>
					<h3><%= lang.garant.info1.title%> </h3><span><%= lang.garant.info1.text%> </span>
				</li>
				<li>
					<div class="icon" uk-icon="icon: lock; ratio: 3"></div>
					<h3><%= lang.garant.info2.title%> </h3><span><%= lang.garant.info2.text%>
					</span>
				</li>
				<li>
					<div class="icon" uk-icon="icon:  star; ratio: 3"></div>
					<h3><%= lang.garant.info3.title%> </h3><span><%= lang.garant.info3.text%> </span>
				</li>
				<li>
					<div class="icon" uk-icon="icon: world; ratio: 3"></div>
					<h3><%= lang.garant.info4.title%> </h3><span><%= lang.garant.info4.text%></span>
				</li>
			</ul><a class="button" href="#order" uk-scroll="uk-scroll"><%= lang.order_transfer%> </a>
		</div>
	</section>
	<section id="order">
		<div class="wrapper">
			<div class="left" uk-scrollspy="cls: uk-animation-slide-top-medium;" uk-parallax="y: -150, 50">
				<%-partial('./partials/form')%>
			</div>
			<div class="right" uk-scrollspy="cls: uk-animation-slide-right-medium;">
				<div class="right__title"><%= lang.order.request%></div>
				<div class="right__content"><%= lang.order.message%></div><a class="button" uk-scrollspy="cls: uk-animation-slide-right;"
				 uk-toggle="target: #getcall"><%= lang.order.contacts%></a>
			</div>
		</div>
	</section>
	<section id="itsworks">
		<div class="wrapper">
			<h2 uk-scrollspy="cls: uk-animation-slide-right-medium;"><%= lang.itsworks.how%></h2>
			<div class="cards" uk-scrollspy="target: &gt; div; cls:uk-animation-fade; delay: 50">
				<div class="card-content">
					<div class="card-content__icon"><i uk-icon="icon:envelope;ratio:1.6"></i></div>
					<div class="card-content__text"><%= lang.itsworks.p1%></div>
				</div>
				<div class="card-content">
					<div class="card-content__icon"><i uk-icon="icon:phone-handset;ratio:1.6"></i></div>
					<div class="card-content__text"><%= lang.itsworks.p2%></div>
				</div>
				<div class="card-content">
					<div class="card-content__icon"><i uk-icon="icon:group;ratio:1.6"></i></div>
					<div class="card-content__text"><%= lang.itsworks.p3%></div>
				</div>
				<div class="card-content">
					<div class="card-content__icon"><i uk-icon="icon:library;ratio:1.6"></i></div>
					<div class="card-content__text"><%= lang.itsworks.p4%></div>
				</div>
				<div class="card-content">
					<div class="card-content__icon"><i uk-icon="icon:clipboard;ratio:1.6"></i></div>
					<div class="card-content__text"><%= lang.itsworks.p5%></div>
				</div>
				<div class="card-content">
					<div class="card-content__icon"><i uk-icon="icon:wand;ratio:1.6"></i></div>
					<div class="card-content__text"><%= lang.itsworks.p6%></div>
				</div>
			</div>
		</div>
	</section>
	<section id="partners">
		<div class="wrapper">
			<div class="uk-position-relative" tabindex="-1" uk-slider="autoplay: true">
				<ul class="uk-slider-items uk-child-width-1-4">
					<li><img src="/img/RZD_logo.png" alt="" /></li>
					<li><img src="/img/RZD_logo.png" alt="" /></li>
					<li><img src="/img/RZD_logo.png" alt="" /></li>
					<li><img src="/img/RZD_logo.png" alt="" /></li>
					<li><img src="/img/RZD_logo.png" alt="" /></li>
					<li><img src="/img/RZD_logo.png" alt="" /></li>
					<li><img src="/img/RZD_logo.png" alt="" /></li>
					<li><img src="/img/RZD_logo.png" alt="" /></li>
				</ul>
			</div>
		</div>
	</section>
</div>

<script src="/js/contact-us.js"></script>
