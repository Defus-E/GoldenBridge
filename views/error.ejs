<% layout('./layout/index') -%>
<% block('title', error.reason[lang.language]) -%>

<div class="page">
	<div class="clear"></div>
	<section id="wrapper" class="container-fluid">
		<div class="error-box">
			<div class="error-body text-center">
				<h1 class="text-danger"><%=error.status%></h1>
				<h3><%=error.reason[lang.language]%>!</h3>
				<p class="text-muted m-t-30 m-b-30">MOST LIKELY THE PAGE YOU ARE LOOKING FOR THERE</p>
				<a href="/" class="btn btn-danger m-b-40"><%= lang.error.return%></a>
			</div>
		</div>
	</section>
</div>